<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:orientation="vertical"
    tools:context=".Activity.EditProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_bottom_rounded"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:background="@drawable/img_back_skin"
            android:fontFamily="@font/nunito_bold"
            android:text="Search"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nunito_bold"
            android:text="Edit Profile"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/litegrey"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/litegrey"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="105dp"
                    android:layout_marginStart="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="26dp"
                    android:layout_height="105dp"
                    android:background="@drawable/circleview" >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_userprofile"
                        android:layout_width="100dp"

                        android:layout_height="100dp"
                        android:background="@drawable/baseline_person"
                        android:layout_margin="3dp"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/img_profile_update"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_marginTop="18dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/img_edit" />]


            </RelativeLayout>

            <EditText
                android:id="@+id/editTextFirstName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/edit_text_selectable"
                android:fontFamily="@font/nunito_medium"
                android:hint="Name"
                android:inputType="text"
                android:paddingStart="12dp"
                android:singleLine="true"
                android:textColor="#343C44"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/edtxt_mobile"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/edit_text_selectable"
                android:fontFamily="@font/nunito_medium"
                android:hint="Mobile Number"
                android:inputType="number"
                android:maxLength="10"
                android:paddingStart="12dp"
                android:singleLine="true"
                android:textColor="#343C44"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/edtxt_age"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/edit_text_selectable"
                android:fontFamily="@font/nunito_medium"
                android:hint="Enter your age"
                android:inputType="number"
                android:maxLength="10"
                android:paddingStart="12dp"
                android:singleLine="true"
                android:textColor="#343C44"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/edtxt_city"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/edit_text_selectable"
                android:fontFamily="@font/nunito_medium"
                android:hint="City"
                android:inputType="text"
                android:paddingStart="12dp"
                android:singleLine="true"
                android:textColor="#343C44"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/edtxt_pincode"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:maxLength="6"
                android:background="@drawable/edit_text_selectable"
                android:fontFamily="@font/nunito_medium"
                android:hint="Pincode"
                android:inputType="number"
                android:paddingStart="12dp"
                android:singleLine="true"
                android:textColor="#343C44"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />

            <EditText

                android:id="@+id/edtxt_landmark"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/edit_text_selectable"
                android:fontFamily="@font/nunito_medium"
                android:hint="Landmark"
                android:inputType="text"
                android:paddingStart="12dp"
                android:singleLine="true"
                android:textColor="#343C44"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />

            <EditText
                android:id="@+id/edtxt_address"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edit_text_selectable"
                android:fontFamily="@font/nunito_medium"
                android:gravity="start"
                android:hint="Address"
                android:inputType="text"
                android:lines="3"
                android:maxLines="3"
                android:padding="10dp"
                android:singleLine="true"
                android:textColor="#343C44"
                android:textSize="14sp"
                tools:ignore="RtlSymmetry" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="30dp"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/txt_save"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="bottom"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/bg_btn_rounded"
                    android:elevation="10dp"
                    android:fontFamily="@font/nunito_medium"
                    android:gravity="center"
                    android:text="SAVE"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_consultation_form"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/nunito_bold"
                android:text="View Consultation form"
                android:layout_marginBottom="22dp"
                android:textColor="@color/theme_color"
                android:textSize="16sp" />


        </LinearLayout>

    </ScrollView>


</LinearLayout>