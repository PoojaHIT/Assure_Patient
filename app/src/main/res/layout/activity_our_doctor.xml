<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F4F4"
    android:orientation="vertical"
    tools:context=".Activity.OurDoctorActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/bg_bottom_rounded"
        android:elevation="6dp">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:background="@drawable/arrow_back"
            android:fontFamily="@font/nunito_bold"
            android:text="Search"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/nunito_bold"
            android:text="Our Doctors"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="3">

        <LinearLayout
            android:id="@+id/ll_hair"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp"
            >

            <TextView
                android:id="@+id/hair_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/nunito_medium"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_experience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/nunito_medium"
                android:gravity="center_vertical"
                android:text="Hair Advisors"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"

            android:background="@color/grey" />

        <LinearLayout
            android:id="@+id/ll_skin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp"
            >

            <TextView
                android:id="@+id/skin_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/nunito_medium"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/nunito_medium"
                android:gravity="center_vertical"
                android:text="Skin Advisors"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"

            android:background="@color/grey" />

        <LinearLayout
            android:id="@+id/ll_nutri"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="2dp"
            >

            <TextView
                android:id="@+id/count_nutri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/nunito_medium"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txt_nutri"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/nunito_medium"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:text="Nutritionist"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14sp"
                tools:ignore="RtlCompat" />

        </LinearLayout>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_ourdoctors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>