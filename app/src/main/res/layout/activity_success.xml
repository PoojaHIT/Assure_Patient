<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.SuccessActivity">

    <RelativeLayout
        android:layout_marginTop="40dp"
        android:id="@+id/rel_success"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_gif"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/img_succcess"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginTop="140dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Booking Successfull!!"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Thank you for booking Appointment"
            android:textColor="#223263"
            android:textSize="14sp" />




    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_app"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@+id/rel_success"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Appointment No."
            android:textColor="#223263"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txt_app_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Appointment No."
            android:textColor="@color/litegreyaa"
            android:textSize="15sp"
            />





    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_booking"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@+id/ll_app"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Booking Date &amp; Time"
            android:textColor="#223263"
            android:textSize="15sp"
            />

    <LinearLayout

        android:id="@+id/ll_status"

        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/img_wall_clock"/>

        <TextView
            android:id="@+id/txt_app_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:fontFamily="@font/nunito_regular"
            android:text="11 April 2022"
            android:textColor="@color/litegreyaa"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView

            android:id="@+id/txt_app_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:gravity="center"
            android:fontFamily="@font/nunito_regular"
            android:text="10:00PM"
            android:textColor="@color/litegreyaa"
            android:textSize="14sp"
            android:textStyle="bold" />


    </LinearLayout>


    </LinearLayout>

    <LinearLayout

        android:id="@+id/ll_name"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_below="@+id/ll_booking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Doctor Name"
            android:textColor="#223263"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/txt_dr_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Harish"
            android:textColor="@color/litegreyaa"
            android:textSize="15sp"
            />





    </LinearLayout>

    <TextView
        android:id="@+id/txt_more_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt_backtohome"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/nunito_regular"
        android:gravity="center"
        android:text="View More Details"
        android:textColor="@color/liteorange"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txt_backtohome"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_btn_rounded"
        android:elevation="10dp"
        android:fontFamily="@font/nunito_medium"
        android:gravity="center"
        android:text="Back To Home"
        android:textColor="@color/white"
        android:textSize="16sp" />

</RelativeLayout>