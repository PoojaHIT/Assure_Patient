<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:padding="5dp"
        android:textSize="12sp"
        android:textColor="@color/dark_gray"
        android:visibility="gone"
        android:id="@+id/datetxt"/>

    <LinearLayout
        android:id="@+id/message_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/datetxt"

        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="1dp">

    <LinearLayout
        android:id="@+id/ll_mess"
        android:orientation="horizontal"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:layout_gravity="center"
            android:layout_width="22dp"
            android:layout_height="1dp"
            android:background="#FE9F63"/>

        <TextView
            android:id="@+id/msgtxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/bg_oo_stroke_rounded"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:fontFamily="@font/nunito_regular"
            android:text="Your message"
            android:textAlignment="textStart"
            android:textColor="#F48C4A"
            android:textSize="15dp"
            tools:ignore="RtlCompat"/>


    </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_book_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:visibility="gone">

            <TextView
                android:id="@+id/txt_bookappointment"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_margin="10dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/bg_btn_rounded"
                android:elevation="10dp"
                android:fontFamily="@font/nunito_medium"
                android:gravity="center"
                android:text="Book Now"
                android:textColor="@color/white"
                android:textSize="13sp" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/message_seen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message_layout"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/lite_grey"
        android:textSize="10dp" />

</RelativeLayout>