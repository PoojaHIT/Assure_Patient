<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:elevation="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal"
        android:weightSum="4">

        <RelativeLayout
            android:id="@+id/llHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
           >

            <ImageView
                android:id="@+id/iv_home_unselected"
                android:layout_marginTop="10dp"
                android:layout_width="24dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:src="@drawable/unselected_home" />

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="24dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:src="@drawable/selected_home" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/llSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">



            <ImageView
                android:id="@+id/iv_search_unselected"
                android:layout_marginTop="10dp"
                android:layout_width="24dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:src="@drawable/unselected_search" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="24dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:src="@drawable/selected_search" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_product"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_product"
                android:layout_width="24dp"
                android:layout_height="34dp"
                android:layout_gravity="center"

                android:src="@drawable/blog_selected" />

            <ImageView
                android:id="@+id/iv_product_unselected"
                android:layout_marginTop="10dp"
                android:layout_width="24dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:src="@drawable/blog_unselected" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ll_chat"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_chat"
                android:layout_width="24dp"
                android:layout_height="34dp"
                android:layout_gravity="center"
                android:src="@drawable/selected_chat" />

            <ImageView
                android:id="@+id/iv_chat_unselected"
                android:layout_width="24dp"
                android:layout_height="42dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/unselected_chat" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>