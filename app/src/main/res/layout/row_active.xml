<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#FEFFFF"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/fl_cart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="10dp"
                    android:layout_gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/que_image"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_launcher_background" />




                </FrameLayout>



                <LinearLayout
                    android:id="@+id/txtt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txt_namee"
                        android:layout_width="190dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="@font/nunito_regular"
                        android:maxLines="2"
                        android:text="Harish Pawar"
                        android:textColor="@color/fullblack"
                        android:textSize="14sp"
                        />
                    <TextView
                        android:id="@+id/txt_date"
                        android:layout_width="90dp"
                        android:fontFamily="@font/nunito_regular"
                        android:textColor="@color/fullblack"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="6 days ago"/>








                </LinearLayout>



                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical">



                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_below="@id/txtt"
                    android:id="@+id/txt_title"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/nunito_regular"
                    android:maxLines="2"
                    android:text="What do you think about giving students online exams?"
                    android:textColor="@color/fullblack"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_below="@id/txtt"
                    android:id="@+id/txt_dec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/nunito_regular"
                    android:maxLines="2"
                    android:text="What do you think about giving students online exams?"
                    android:textColor="@color/fullblack"
                    android:textSize="12sp" />
            </LinearLayout>





        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>