<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="10dp"
    android:background="@drawable/bg_white_rounded_sheet"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
            android:text="Write Your Review"
            android:fontFamily="@font/nunito_regular"
            android:textSize="16sp"
            android:textColor="@color/fullblack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>


        </LinearLayout>



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="15dp"
            android:text="My Rate"
            android:fontFamily="@font/nunito_regular"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/fullblack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_margin="16dp"
            android:text="Title"
            android:fontFamily="@font/nunito_regular"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/fullblack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edt_title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"

            android:layout_marginEnd="16dp"
            android:background="@drawable/edit_text_selectable"

            android:drawablePadding="10dp"
            android:fontFamily="@font/nunito_medium"
            android:hint="Share your experience with everyone"
            android:inputType="text"
            android:paddingStart="20dp"
            android:singleLine="true"
            android:textColor="#9098B1"
            android:textSize="14sp"
            tools:ignore="RtlSymmetry" />

        <TextView

            android:text="100 Character Limit"
            android:fontFamily="@font/nunito_regular"
            android:textSize="14sp"
            android:layout_marginTop="6dp"
            android:layout_marginEnd="16dp"
            android:layout_gravity="right"
            android:textColor="@color/fullblack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_margin="16dp"
            android:text="Description"
            android:fontFamily="@font/nunito_regular"
            android:textSize="14sp"
            android:gravity="center"
            android:textColor="@color/fullblack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <EditText
            android:id="@+id/edt_description"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginStart="16dp"
            android:padding="10dp"
            android:gravity="start"
            android:layout_marginEnd="16dp"
            android:background="@drawable/edit_text_selectable"
            android:drawablePadding="10dp"
            android:fontFamily="@font/nunito_medium"
            android:hint="Share your experience with everyone."
            android:text=""
            android:paddingStart="20dp"
            android:textColor="#9098B1"
            android:textSize="14sp" />

        <TextView
            android:text="1000 Character Limit"
            android:fontFamily="@font/nunito_regular"
            android:textSize="14sp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="6dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="right"
            android:textColor="@color/fullblack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="Upload Image"
            android:fontFamily="@font/nunito_regular"
            android:textSize="14sp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:textColor="@color/fullblack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:padding="10dp"
            android:id="@+id/txt_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="16dp"
            android:background="@drawable/rb_selected"
            android:elevation="10dp"
            android:fontFamily="@font/nunito_medium"
            android:gravity="center"
            android:text="Browse Files"
            android:textColor="@color/liteorangenew"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_marginLeft="16dp"
            android:id="@+id/llFile1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:id="@+id/textFileName1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageFile1"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="0.1"
                android:src="@drawable/img_trash" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llFile2"
            android:layout_marginLeft="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:id="@+id/textFileName2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageFile2"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="0.1"
                android:src="@drawable/img_trash" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="16dp"
            android:id="@+id/llFile3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone"
            android:weightSum="1">

            <TextView
                android:id="@+id/textFileName3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/imageFile3"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="0.1"
                android:src="@drawable/img_trash" />

        </LinearLayout>






    </LinearLayout>

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:padding="10dp"
        android:id="@+id/txt_submit"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="16dp"
        android:background="@drawable/bg_btn_rounded"
        android:elevation="10dp"
        android:fontFamily="@font/nunito_medium"
        android:gravity="center"
        android:text="Submit Review"
        android:textColor="@color/white"
        android:textSize="16sp" />


    </LinearLayout>







</LinearLayout>